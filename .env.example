# Database Configuration
DATABASE_URL=postgresql://renec:renec_secure_pass@localhost:5432/renec_harvester
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL=redis://:renec_redis_pass@localhost:6379/0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# Celery Configuration
CELERY_BROKER_URL=redis://:renec_redis_pass@localhost:6379/2
CELERY_RESULT_BACKEND=redis://:renec_redis_pass@localhost:6379/3

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Scraping Configuration
MAX_CONCURRENT_REQUESTS=5
DOWNLOAD_DELAY=1.0
RANDOMIZE_DOWNLOAD_DELAY=true
USER_AGENT=RENEC-Harvester/0.2.0 (+https://github.com/innovacionesmadfam/renec-harvester)
RESPECT_ROBOTS_TXT=true

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_NAVIGATION_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_REQUESTS=120
RATE_LIMIT_PERIOD=60

# Monitoring
SENTRY_DSN=
PROMETHEUS_METRICS_PORT=8000
LOG_LEVEL=INFO
LOG_FORMAT=json

# Storage
ARTIFACTS_DIR=./artifacts
EXPORT_FORMATS=json,csv,parquet

# Environment
ENVIRONMENT=development