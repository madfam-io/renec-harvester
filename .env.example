# RENEC Harvester Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
RENEC_API_KEY=your-secure-api-key-here
RENEC_API_KEYS=additional-key-1,additional-key-2
API_PORT=8000
API_HOST=0.0.0.0

# Database Configuration
POSTGRES_USER=renec
POSTGRES_PASSWORD=change-this-password-in-production
POSTGRES_DB=renec_harvester
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change-this-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-grafana-password
FLOWER_BASIC_AUTH=admin:change-this-flower-password

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@renec.local
PGADMIN_DEFAULT_PASSWORD=change-this-pgadmin-password

# Celery Configuration
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Spider Configuration
CONCURRENT_REQUESTS=10
DOWNLOAD_DELAY=0.5
MAX_DEPTH=5
USER_AGENT=RENEC-Harvester/0.2.0

# Security Configuration
SECRET_KEY=change-this-secret-key-use-openssl-rand-base64-32
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Feature Flags
ENABLE_METRICS=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true

# Environment
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO